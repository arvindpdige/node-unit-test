{
  "name": "01-unit-tests",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
      "test": "jest --ci --testResultsProcessor=jest-junit --coverage --coverageReporters=cobertura", 
      "test-watchAll": "jest --watchAll" 
    }, 
    "jest": { 
      "transform": {},
      "verbose": true, 
      "extensionsToTreatAsEsm": [".js"],
      "collectCoverage": true, 
      "coverageReporters": [ "html", "json", "text", "cobertura" ], 
      "testResultsProcessor": "jest-junit" ,
      "testEnvironment": "node"
    },
    "jest-junit": {
      "outputDirectory": "./reports",
      "outputName": "junit.xml"
    },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvindpdige/node-unit-test.git"
  },
